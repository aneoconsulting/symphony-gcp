apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRoleBinding
metadata:
  name: "{{ cluster_role_binding_name }}"
roleRef:
  kind: ClusterRole
  name: "{{ cluster_role_name }}"
  apiGroup: rbac.authorization.k8s.io
subjects:
  - kind: ServiceAccount
    name: "{{ service_account_name }}"
    namespace: "{{ namespace }}"
